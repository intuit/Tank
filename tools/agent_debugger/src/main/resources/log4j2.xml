<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" packages="com.intuit.tank.tools.debugger">
    <Appenders>
        <DebuggerAppender name="debuggerAppender">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss} %msg%n</pattern>
            </PatternLayout>
        </DebuggerAppender>
        <RollingFile name="agent" filename="debugger.log" filePattern="debugger-%i.log">
            <PatternLayout pattern="%d{yyyy-MM-dd  HH:mm:ss,SSS z} %5p %c{1}:%L - %m%n" />
            <Policies>
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
		<Logger name="com" level="info" additivity="false">
			<appender-ref ref="debuggerAppender" level="info"/>
		</Logger>
		<Logger name="org" level="info" additivity="false">
			<appender-ref ref="debuggerAppender" level="info"/>
		</Logger>
        <Root level="error">
            <AppenderRef ref="debuggerAppender"/>
            <AppenderRef ref="agent"/>
        </Root>
    </Loggers>
</Configuration>